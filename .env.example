# Copy this file to .env and fill in real values.
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser (Next.js).
# Do NOT commit your .env to source control.

# Google AI Studio / Gemini
GEMINI_API_KEY=

# Firebase Web App Config
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.asia-southeast1.firebasedatabase.app
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Admin (public, used client-side only for bootstrap super admin bypass)
NEXT_PUBLIC_SUPER_ADMIN_EMAIL=

# Firebase Admin (server-side, NOT exposed to browser)
# Either provide these explicit credentials OR configure ADC with GOOGLE_APPLICATION_CREDENTIALS.
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# Important: Use \n for newlines in the private key when storing in .env files.
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# Storage bucket is needed for server-side cleanup/uploads
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Optional: Application Default Credentials (alternative to explicit creds)
# GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/serviceAccountKey.json

# Optional: Employee ID prefix (used by /api/admin/generate-employee-id)
# Defaults to TLY if not set
EMPLOYEE_ID_PREFIX=TALIYO

